
<div class="form-section">
  <form method="post" action="/memos/new">
    <div class="form-items">
      <div class="form-items__item">
        <label>タイトル：</label>
        <input type="text" name="title" maxlength=20>
      </div>
      <div class="form-items_item">
        <label>内容：</label>
        <textarea name="content" maxlength=120></textarea>
      </div>
      <div class="form-action form-of-creation">
        <input type="submit" value="Create">
        <input type="reset" value="Reset">
      </div>
    </div>
  </form>
</div>
